<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smile.gilberto.pizzaorder.MainActivity"
    android:background="#fce897">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Pizza"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Pizza"
        android:id="@+id/textView4"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Pizza"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smallpz"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/mediumpz"
        android:layout_alignStart="@+id/mediumpz"
        android:hint="Type QTY"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/largepz"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/mediumpz"
        android:layout_alignStart="@+id/mediumpz"
        android:hint="Type QTY"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediumpz"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:hint="Type QTY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12"
        android:id="@+id/pricesmall"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/smallpz"
        android:layout_toEndOf="@+id/smallpz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20"
        android:id="@+id/pricemedium"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/mediumpz"
        android:layout_toEndOf="@+id/mediumpz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25"
        android:id="@+id/pricelarge"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/largepz"
        android:layout_toEndOf="@+id/largepz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salade"
        android:id="@+id/textView9"
        android:layout_below="@+id/largepz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salads"
        android:hint="Type QTY"
        android:layout_below="@+id/largepz"
        android:layout_alignRight="@+id/largepz"
        android:layout_alignEnd="@+id/largepz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$8"
        android:id="@+id/pricesalade"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/pricelarge"
        android:layout_toEndOf="@+id/pricelarge"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Order"
        android:id="@+id/button"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/salads"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Total is : "
        android:id="@+id/textView11"
        android:layout_below="@+id/salads"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Type Customer Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/total"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Order"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/total"
        android:layout_toEndOf="@+id/total"/>

</RelativeLayout>
